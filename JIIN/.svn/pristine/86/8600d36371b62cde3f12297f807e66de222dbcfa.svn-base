<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="10dp" >

        <ImageView
            android:id="@+id/image_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/profileback" />

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/profile" />

    </FrameLayout>
            
            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/text_info_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="별명" />

        <EditText
            android:id="@+id/edit_info_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="foxylada"
            android:gravity="right" 
            android:ems="10" >

        </EditText>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/text_info_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나이" />

        <EditText
            android:id="@+id/edit_info_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="28"
            android:gravity="right" 
            android:ems="10" >

        </EditText>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/text_info_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지역" />

        <EditText
            android:id="@+id/edit_info_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="서울"
            android:gravity="right" 
            android:ems="10" >

        </EditText>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/text_info_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="직장" />

        <EditText
            android:id="@+id/edit_info_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="지인자동차"
            android:gravity="right" 
            android:ems="10" >

        </EditText>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/text_info_univ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출신학교" />

        <EditText
            android:id="@+id/edit_info_univ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="지인대학교"
            android:gravity="right" 
            android:ems="10" >

        </EditText>

    </LinearLayout>

    <Button
        android:id="@+id/btn_certify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="학교/직장 인증하기" />

    <GridView
        android:id="@+id/gridView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:numColumns="3" >
    </GridView>
            
        </LinearLayout>
    </ScrollView>

    

</LinearLayout>