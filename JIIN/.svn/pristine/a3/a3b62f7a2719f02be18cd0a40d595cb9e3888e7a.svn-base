<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="10dp" >

        <ImageView
            android:id="@+id/image_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/profileback" />

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/profile" />

    </FrameLayout>
            
            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/text_otherinfo_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="별명" />

        <TextView
            android:id="@+id/edit_otherinfo_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="foxylada"
            android:gravity="right" />


    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/text_otherinfo_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나이" />

        <TextView
            android:id="@+id/edit_otherinfo_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="28"
            android:gravity="right" />


    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/text_otherinfo_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지역" />

        <TextView
            android:id="@+id/edit_info_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="서울"
            android:gravity="right" />


    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/text_otherinfo_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="직장" />

        <TexViewt
            android:id="@+id/edit_otherinfo_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="지인자동차"
            android:gravity="right" />


    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/text_otherinfo_univ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출신학교" />

        <TextView
            android:id="@+id/edit_otherinfo_univ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="지인대학교"
            android:gravity="right" />


    </LinearLayout>



    <GridView
        android:id="@+id/gridView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:numColumns="3" >
    </GridView>
            
        </LinearLayout>
    </ScrollView>

    

</LinearLayout>