<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_e5e5e5"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_fblogin"
        android:layout_width="255dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="298dp"
        android:background="@drawable/btn_facebook"
        android:text="@string/facebook2"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_default"
        android:textAllCaps="false" />

    <LinearLayout
        android:layout_width="255dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/btn_email" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ic_user" />

        <EditText
            android:id="@+id/edit_emaill"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="e-mail"
            android:inputType="textEmailAddress"
            android:paddingTop="10dp"
            android:textColorHint="#989fa9"
            android:textSize="@dimen/text_default" >
            
            <requestFocus />
            </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="255dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_email" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ic_lock" />

        <EditText
            android:id="@+id/edit_PWl"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            android:paddingTop="10dp"
            android:textColorHint="#989fa9"
            android:textSize="@dimen/text_default" >

        </EditText>

    </LinearLayout>

    <Button
        android:id="@+id/btn_requestLogin"
        android:layout_width="255dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/btn_main_enter"
        android:text="로그인"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/text_link2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="비밀번호를 잃어버리셨나요?"
        android:textSize="10sp" />

</LinearLayout>
