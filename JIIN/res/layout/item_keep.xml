<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="15dp"
    android:paddingRight="15dp" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="162dp"
            android:layout_height="220dp"
            android:src="@drawable/bg_frame" />

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="162dp"
            android:layout_height="216dp"
            android:scaleType="fitXY"
            android:src="@drawable/aaaaaaaaaaaa" />

        <FrameLayout
            android:layout_width="162dp"
            android:layout_height="216dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_gravity="bottom"
                android:background="@drawable/alpha_keep_list"
                android:paddingLeft="8dp"
                android:paddingRight="5dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/text_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textColor="#4fc1e9"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/text_area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Text"
                            android:textColor="#ffffff"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/text_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textColor="#ffffff"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textColor="#ffffff"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btn_pass"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="31dp"
                        android:layout_height="31dp"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/ic_cancle222" />

                    <TextView
                        android:id="@+id/text_dday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="D-3"
                        android:textColor="#ffffff"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_like"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/ic_heart2" />
        </FrameLayout>
    </FrameLayout>

</FrameLayout>